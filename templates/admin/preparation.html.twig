{% extends "base.html.twig" %}

{% block body %}
    <div class="preparation container">
        <div class="text-center mb-5">
            <h1>Episode en pr√©paration</h1>
        </div>

        {% for article in articles %}
        {% set edit = path ('article_detail_edit', {'slug': article.slug}) %}
        {% set delete = path ('article_delete', {'slug': article.slug}) %}
            <div>
                <h2>{{ article.title }}</h2>
                <p>Auteur : {{ article.auteur }}</p>
                <a href="{{article.url}}"><btn class="btn btn-primary">Lien de l'article</btn></a>
                <a href="{{ edit }}"><btn class="btn btn-success">Modifier</btn></a>
                <a href="{{ delete }}" onclick="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?')"><btn class="btn btn-danger float-end">Supprimer</btn></a>
            </div>
        {% endfor %}
    </div>
{% endblock %}