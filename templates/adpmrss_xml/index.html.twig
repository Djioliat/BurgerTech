        <link>{{ hostname }}</link>
        <description>Le podcast traitant de Linux et de l'open source</description>
        <language>fr-FR</language>

        <itunes:category text="Technology" />
        <itunes:image href="https://nsm09.casimages.com/img/2023/10/10//23101012042424921118272290.png" />
