{% extends 'base.html.twig' %}

{% block body %}
	<main class="container col-12">
		<div class="d-flex mt-5 mb-3">
			<div class="col-6">
				<img src="{{ episode.coverImage }}" style="width: 25rem" alt="...">
			</div>
            <div class="col-6 row justify-content-center">
                <div class="">
                    <h4 class="row justify-content-center">{{ episode.title }}</h4>
                </div>
                <div>
                    <p class="row justify-content-center">{{ episode.introduction }}</p>
                </div>
                <div class="row mt-5">
                    <audio controls>
                        <source class="" src="{{ episode.audio }}">
                    </audio>
                </div>
                <div class="row">
                    <p>{{ episode.content }}
                </div>
                <div class="text-end">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="#" class="btn btn-warning">Modifier</a>
                    {% endif %}
                </div>
            <div>
		</div>
    </main>
    <main class="container col-12 mb-3">
        <div class="d-flex mt-5">
            <div class="col-5">
                    <div>
                        <h4>Les commentaires :</h4>
                    </div>
                    {% for comment in episode.comments %}
                        <div class="card mt-2">
                            <p>Publié par {{ comment.users.pseudo }}<br>Le {{ comment.createdAt | date("d/m/Y à H:i") }}</p>
                            <p class="mr-5">{{ comment.content | raw }}</p>
                            <p><a class="btn btn-success" href="#ajout-commentaire" data-reply data-id="{{ comment.id }}">Répondre</a></p>
                        </div>
                    {% endfor %}
            </div>
            {% if is_granted('ROLE_USER') %}
                <div class="col-6 m-5 justify-content-center text-center">
                    <div class="card border-secondary" id="ajout-commentaire">
                        <h4 class="mt-3">Ajouter votre commentaire</h4>
                        {{ form(commentForm) }}
                    </div>
                </div> 
            {% else %}
                <div class="col-6 m-5 justify-content-center text-center">
                    <div class="card border-secondary" id="ajout-commentaire" style= height:200px>
                        <h4 class="mt-3">Envie de partager votre avis.<br> Connectez vous !</h4>
                        <div class="position-relativestyle mt-3">
                            <a href="{{ path('app_register') }}" class="btn btn-success m-3">Inscription</a>
                            <a href="{{ path('app_login') }}" class="btn btn-primary m-3">Connection</a>
                        </div>
                    </div>
                </div>   
            {% endif %}
        </div>
	</main>
{% endblock %}
{% block javascripts %}
    <script>
        windows.onload = () => {
            document.querySelectorAll("[data-reply]").forEach(element => {
                element.addEventListener("click", function(){
                    document.querySelector("#comment_parentid").value = this.dataset.id;
                });
            });
        }
    </script>
{% endblock %}