{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section class="container comment">
		
			<div class="col-lg-8 col-sm-10 mx-auto mt-5">
				<h1>Inscription</h1>
				{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.pseudo) }}
				{{ form_row(registrationForm.avatar) }}
				{{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
				{{ form_row(registrationForm.rgpd, {
                        label: 'J\'accepte tout sur la loi rgpd'
                    }) }}

                    <button type="submit" class="btn btn-primary btn-lg mt-5 mb-5 rounded-pill">Inscription</button>
                {{ form_end(registrationForm) }}
			</div>
		
	</section>
{% endblock %}
