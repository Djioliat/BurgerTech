{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container-fluid ">
    
        <div class="col-lg-6 mx-auto comment col-sm text-center">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté(e) avec le profil {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecté</a>
                    </div>
                {% endif %}

                <h2 class="m-3 text-center font-weight-normal">Connexion</h2>
                <label class="mb-3 mt-5" for="inputEmail">Ton mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
                <label class="mb-3" for="inputPassword">Ton mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}">
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <button class="btn btn-lg btn-primary mt-4 rounded-pill" type="submit">
                    Connexion
                </button>
            </form>
        </div>
   
</div>
{% endblock %}